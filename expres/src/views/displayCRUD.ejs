<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      table,
      th,
      td {
        border: 1px solid rgb(28, 2, 31);
        border-collapse: collapse;
      }
      .btn-edit {
        border: none;
        background: rgb(15, 174, 202);
        height: 25px;
        width: 50px;
        border-radius: 2px;
        cursor: pointer;
      }
      .btn-delete {
        border: none;
        background: rgb(172, 49, 49);
        height: 25px;
        width: 50px;
        border-radius: 2px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <table style="width: 100%">
      <tr>
        <th>Email</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>
      <% for(let i=0 ; i< dataTable.length ; i++ ) {%>
      <tr>
        <td><%=dataTable[i].email%></td>
        <td><%=dataTable[i].firstName%></td>
        <td><%=dataTable[i].lastName%></td>
        <td><%=dataTable[i].address%></td>
        <td style="text-align: center">
          <a href="/edit-crud?id=<%=dataTable[i].id%>"
            ><button class="btn-edit" type="button">Edit</button></a
          >
          <a href="/delete-crud?id=<%=dataTable[i].id%>"
            ><button class="btn-delete" type="button">Delete</button></a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
